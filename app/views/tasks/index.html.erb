<h1 class="mt-2 mb-4">ğŸ—’ï¸ Tasks:</h1>
<ul class="list-unstyled list-group list-group-flush">
  <% @tasks.each do |task| %>
    <li class="d-flex list-group-item justify-content-between">
      <div class="box-text">
        <% if task.completed == true %>
          <i class="fa-regular fa-square-check" style="color: #419806;"></i>
        <% else %>
          <i class="fa-regular fa-square" style="color: #8f0000;"></i>
        <% end %>
        <%= link_to task.title, task_path(task), class: 'text-decoration-none text-dark'%>
      </div>
      <div class="delete">
        <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
        <i class="fa-solid fa-trash" style="color: #d6009d;"></i>
        <% end %>
      </div>
    </li>
  <% end %>
</ul>
<button class="btn btn-primary w-50 mt-2"><%= link_to "+  Add a task",new_task_path, class: 'text-decoration-none text-light' %></button>
